<!-- features.liquid -->
<div class="container">
  <div class="row">
    {% for block in section.blocks %}
      <div class="col-lg-3 col-md-6 col-sm-12 d-flex gap-2 align-items-center">
        <img src="{{ block.settings.image | image_url }}" width="30px" alt="">
        <p class="feature-text">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .feature-text{
    font-size:14px;
    font-weight:600;
  }
</style>
{% schema %}
{
  "name": "Features",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "EXPRESS DELIVERY SERVICE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
