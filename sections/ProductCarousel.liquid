{% schema %}
{
  "name": "Product Slider",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "default": 4,
      "step": 1,
      "min": 1,
      "max": 12
    }
  ],
  "presets": [
    {
      "name": "Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const wishlistButtons = document.querySelectorAll('.add-to-wishlist');

    let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

    wishlistButtons.forEach((button) => {
      const productId = button.getAttribute('product-id');
      if (wishlist.includes(productId)) {
        button.style.backgroundColor = '#70D1B7';
        const icon = button.querySelector('i');
        if (icon) {
          icon.style.color = '#fff';
        }
      }
    });

    // Quick View Click Event
    $('.quick-view').on('click', function () {
      var productId = $(this).attr('product-id'); // Get the product ID
      var productTitle = $(this).attr('product-title'); // Get the product title (handle)

      if (productTitle) {
        // Update the handle to replace the spaces with dashes
        var productHandle = productTitle.replace(/\s+/g, '-');
        console.log('Quick view clicked for product:', productHandle);
      } else {
        console.error('Product title is undefined or null.');
      }

      var modal = $('#modal');

      // Show the modal
      modal.css('display', 'block');
      setTimeout(function () {
        modal.addClass('show');
      }, 10);

      // Fetch product details using the product title (handle)
      $.ajax({
        url: '/products/' + productTitle + '.js', // Use the product handle to fetch the data
        dataType: 'json',
        success: function (data) {
          // Populate the modal with the product details
          $('#modal-title').text(data.title);
          $('#modal-details').html(data.body_html);
        },
        error: function () {
          // Handle errors
          $('#modal-title').text('Error');
          $('#modal-details').text('Unable to load product details.');
        },
      });
    });

    // Close Modal
    $('.close').on('click', function () {
      var modal = $('#modal');
      modal.removeClass('show');
      setTimeout(function () {
        modal.css('display', 'none');
      }, 400);
    });

    $(window).on('click', function (event) {
      if ($(event.target).is('#modal')) {
        var modal = $('#modal');
        modal.removeClass('show');
        setTimeout(function () {
          modal.css('display', 'none');
        }, 400);
      }
    });

    wishlistButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const productId = this.getAttribute('product-id');
        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

        if (wishlist.includes(productId)) {
          wishlist = wishlist.filter((id) => id !== productId);
          this.style.backgroundColor = '';
          const icon = this.querySelector('i');
          if (icon) {
            icon.style.color = '';
          }
        } else {
          wishlist.push(productId);
          this.style.backgroundColor = '#70D1B7';
          const icon = this.querySelector('i');
          if (icon) {
            icon.style.color = '#fff';
          }
        }

        localStorage.setItem('wishlist', JSON.stringify(wishlist));
      });
    });
  });
</script>
