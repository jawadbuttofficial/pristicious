<style>
  .slick-track {
    width: 100%;
  }
  .sub-title {
    font-size: 14px;
    font-weight: 600;
    color: #a1a1a1;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .title {
    font-size: 32px;
    color: #4d4d4d;
    font-weight: 600;
    margin: 0px;
  }
  .slider-nav-arrow {
    height: 50px;
    width: 50px;
    border-radius: 50px;
    background-color: #fff;
    padding: 13px;
    border: 1px solid #e7e8eb;
    transition: 0.3s;
    cursor: pointer;
    box-shadow: 5px 5px 10px #0000001a;
  }
  .slider-nav-arrow:hover {
    background-color: #70d1b7;
    box-shadow: 2px 2px 10px #0000001a;
  }
  .slider-nav-arrow svg {
    margin-top: -8px;
  }
  .slider-nav-arrow svg path {
    fill: #888;
    vertical-align: unset !important;
  }
  .slider-nav-arrow:hover svg path {
    fill: #fff;
  }
  .nav-arrow-mobile {
    display: none;
  }
  .product-image {
    min-height: 400px;
    object-fit: cover;
  }
  .slider-product-card {
    min-height: 200px;
    min-width: 200px;
    margin-right: 10px;
    position: relative;
    overflow: hidden;
    width: 100%;
  }
  .product-card-action {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 10px;
    align-items: flex-end;
    position: absolute;
    top: 0;
    right: 0;
    transform: translateX(60px);
    z-index: 999;
    transition-duration: 0.5s;
  }
  .slider-product-card:hover .product-card-action {
    transform: translateX(0px) !important;
  }
  .product-card-action span {
    height: 50px;
    width: 50px;
    border-radius: 50px;
    background-color: #fff;
    padding: 13px;
    border: 1px solid #e7e8eb;
    transition: 0.3s;
    cursor: pointer;
    box-shadow: 5px 5px 10px #0000001a;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .product-card-action span i {
    color: #888;
    margin-top: -4px;
  }
  .product-card-action span:hover {
    background-color: #70d1b7;
  }
  .product-card-action span:hover i {
    color: #fff;
  }
  .product-card-action span:hover span svg path {
    fill: #fff !important;
    stroke: #fff !important;
  }
  .add-to-cart {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  .add-to-cart a {
    width: 90%;
    padding: 10px;
    background-color: #000;
    border-radius: 0px;
    display: inline-block;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    text-align: center;
    font-weight: 600;
    font-size: 12px;
    margin-top: -60px;
    margin-bottom: 24px;
    opacity: 0;
    transition: 0.5s;
    z-index: 999;
  }
  .add-to-cart a:hover {
    background-color: #70d1b7;
  }
  .slider-product-card:hover .add-to-cart a {
    opacity: 1;
  }
  .slick-slide {
    margin-right: 20px !important;
  }
  .slider-product-card .product-info h1 {
    font-size: 18px;
    font-weight: 500;
  }
  .slider-product-card .product-info p {
    font-size: 14px;
    font-weight: 400;
  }
  @media screen and (max-width: 992px) {
    .lg-slider-nav {
      display: none !important;
    }
  }
  @media screen and (max-width: 992px) {
    .nav-arrow-mobile {
      display: flex;
    }
  }
  .hover-image {
    position: absolute;
    transition: 0.5s ease-in-out;
    z-index: 9;
    top: 0;
    opacity: 0;
  }
  .slider-product-card:hover .hover-image {
    opacity: 1;
  }
</style>
<div class="container mt-5">
  <div class="row d-flex justify-content-between">
    <div class="col-lg-6 col-md-12">
      <p class="sub-title m-0 p-0">HANDPICK FURNITURE</p>
      <h2 class="title">Home Decoration</h2>
    </div>
    <div class="p-slider-nav lg-slider-nav col-lg-6 col-md-12 d-flex justify-content-end align-items-end px-4 gap-2">
      <span class="prev slider-nav-arrow">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" transform="matrix(-1, 0, 0, 1, 0, 0)">
          <path d="M9.71069 18.2929C10.1012 18.6834 10.7344 18.6834 11.1249 18.2929L16.0123 13.4006C16.7927 12.6195 16.7924 11.3537 16.0117 10.5729L11.1213 5.68254C10.7308 5.29202 10.0976 5.29202 9.70708 5.68254C9.31655 6.07307 9.31655 6.70623 9.70708 7.09676L13.8927 11.2824C14.2833 11.6729 14.2833 12.3061 13.8927 12.6966L9.71069 16.8787C9.32016 17.2692 9.32016 17.9023 9.71069 18.2929Z" fill="currentColor"></path>
        </svg>
      </span>
      <span class="next slider-nav-arrow">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9.71069 18.2929C10.1012 18.6834 10.7344 18.6834 11.1249 18.2929L16.0123 13.4006C16.7927 12.6195 16.7924 11.3537 16.0117 10.5729L11.1213 5.68254C10.7308 5.29202 10.0976 5.29202 9.70708 5.68254C9.31655 6.07307 9.31655 6.70623 9.70708 7.09676L13.8927 11.2824C14.2833 11.6729 14.2833 12.3061 13.8927 12.6966L9.71069 16.8787C9.32016 17.2692 9.32016 17.9023 9.71069 18.2929Z" fill="currentColor"></path>
        </svg>
      </span>
    </div>
  </div>
  <div class="row mt-3">
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      {% assign products = collection.products | limit: section.settings.product_limit %}
      {% if products.size > 0 %}
        <div class="product-slider">
          {% for product in products %}
            <div class="slider-product-card">
              <a href="{{ product.url }}"
                ><img
                  src="{{ product.featured_image | image_url }}"
                  alt="{{ product.title }}"
                  width="100%"
                  height="100%"
                  class="normal-image product-image"
              ></a>
              {% if product.images.size > 1 %}
                <img
                  src="{{ product.images[1] |  image_url }}"
                  alt="{{ product.title }} second image"
                  height="100%"
                  width="100%"
                  class="hover-image product-image"
                >
              {% endif %}

              <div class="product-card-action">
                <span><i class="bi bi-eye"></i></span>
                <span><i class="bi bi-heart"></i></span>
              </div>
              <div class="add-to-cart">
                <a href="{{ routes.cart_add_url }}?id={{ product.variants.first.id }}">ADD TO CART</a>
              </div>
              <div class="product-info">
                <h1>{{ product.title }}</h1>
                <p>{{ product.price | money }}</p>
                {% if product.variants.size > 1 %}
                  <div class="variant-images">
                    {% for variant in product.variants %}
                      <img
                        src="{{ variant.image | image_url }}"
                        height="60px"
                        width="60px"
                        alt="{{ variant.title }}"
                        class="variant-circle"
                      >
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endif %}
  </div>
  <div class="row flex-nowrap nav-arrow-mobile mt-3">
    <div class="col d-flex justify-content-end align-self-center">
      <span class="prev slider-nav-arrow">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" transform="matrix(-1, 0, 0, 1, 0, 0)">
          <path d="M9.71069 18.2929C10.1012 18.6834 10.7344 18.6834 11.1249 18.2929L16.0123 13.4006C16.7927 12.6195 16.7924 11.3537 16.0117 10.5729L11.1213 5.68254C10.7308 5.29202 10.0976 5.29202 9.70708 5.68254C9.31655 6.07307 9.31655 6.70623 9.70708 7.09676L13.8927 11.2824C14.2833 11.6729 14.2833 12.3061 13.8927 12.6966L9.71069 16.8787C9.32016 17.2692 9.32016 17.9023 9.71069 18.2929Z" fill="currentColor"></path>
        </svg>
      </span>
    </div>
    <div class="col d-flex justify-content-start align-self-center">
      <span class="next slider-nav-arrow">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9.71069 18.2929C10.1012 18.6834 10.7344 18.6834 11.1249 18.2929L16.0123 13.4006C16.7927 12.6195 16.7924 11.3537 16.0117 10.5729L11.1213 5.68254C10.7308 5.29202 10.0976 5.29202 9.70708 5.68254C9.31655 6.07307 9.31655 6.70623 9.70708 7.09676L13.8927 11.2824C14.2833 11.6729 14.2833 12.3061 13.8927 12.6966L9.71069 16.8787C9.32016 17.2692 9.32016 17.9023 9.71069 18.2929Z" fill="currentColor"></path>
        </svg>
      </span>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Product Slider",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "default": 4,
      "min": 1,
      "max": 12
    }
  ],
  "presets": [
    {
      "name": "Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
