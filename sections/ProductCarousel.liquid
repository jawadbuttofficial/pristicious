              </div>
              <div class="col-lg-9">
                <a href="#" class="add-to-cart-btn">ADD TO CART</a>
              </div>
            </div>
          </div>
          <a href="#" class="col-12 view-detail-btn">View Detail</a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Slider",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "default": 4,
      "step": 1,
      "min": 1,
      "max": 12
    }
  ],
  "presets": [
    {
      "name": "Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const wishlistButtons = document.querySelectorAll('.add-to-wishlist');
    let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

    // Highlight wishlist items that are already in the wishlist
    wishlistButtons.forEach((button) => {
      const productId = button.getAttribute('product-id');
      if (wishlist.includes(productId)) {
        button.style.backgroundColor = '#70D1B7';
        const icon = button.querySelector('i');
        if (icon) {
          icon.style.color = '#fff';
        }
      }
    });

    // Wishlist button click event
    wishlistButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const productId = this.getAttribute('product-id');
        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

        if (wishlist.includes(productId)) {
          wishlist = wishlist.filter((id) => id !== productId);
          this.style.backgroundColor = '';
          const icon = this.querySelector('i');
          if (icon) {
            icon.style.color = '';
          }
        } else {
          wishlist.push(productId);
          this.style.backgroundColor = '#70D1B7';
          const icon = this.querySelector('i');
          if (icon) {
            icon.style.color = '#fff';
          }
        }

        localStorage.setItem('wishlist', JSON.stringify(wishlist));
      });
    });

    // Quick View button click event
    $('.quick-view').on('click', function () {
      const productId = $(this).attr('product-id'); // Get the product ID
      const productTitle = $(this).attr('product-title'); // Get the product title (handle)
      const modal = $('#modal');

      // Show the modal with placeholders
      modal.css('display', 'flex');
      setTimeout(function () {
        modal.addClass('show');
      }, 10);

      // Fetch product details using the product title (handle)
      $.ajax({
        url: '/products/' + productTitle + '.js', // Use the product handle to fetch the data
        dataType: 'json',
        success: function (data) {
          // Populate the modal with the product details
          $('#modal-title').text(data.title);

          if (data.images && data.images.length > 0) {
            // Clear existing content
            $('.image-container').html('');

            if (data.images.length > 1) {
              // Initialize the slider and add images
              $('.image-container').html('<div class="quick-view-slider"></div>');
              $('.quick-view-slider').slick({
                // Slick slider options
              });
              data.images.forEach(function (imageUrl) {
                $('.quick-view-slider').slick(
                  'slickAdd',
                  '<div><img style="object-fit: cover; height: 550px; width: 100%; position: center;" class="quick-view-images" src="' +
                    imageUrl +
                    '" alt="' +
                    data.title +
                    '"></div>'
                );
              });
            } else {
              // Display only one image without initializing the slider
              $('.image-container').html(
                '<img style="object-fit: cover; min-height: 550px; width: 100%; position: center;" class="quick-view-images" src="' +
                  data.images[0] +
                  '" alt="' +
                  data.title +
                  '">'
              );
            }
          } else {
            // Handle case when there are no images
            $('.image-container').html('<p>No images available.</p>');
          }
        },
        error: function () {
          // Handle errors
          $('#modal-title').text('Error');
          $('#modal-details').text('Unable to load product details.');
        },
      });
    });

    // Function to reset modal content to placeholders
    function resetModal() {
      $('#modal-title').html('<span class="placeholder col-6"></span>');
      $('#modal-details').html(`
        <span class="placeholder col-12"></span>
      `);
      $('.image-container').html('<span class="placeholder product-img" style="height: 550px; width:100%;"></span>');
    }

    // Close Modal
    $('.close').on('click', function () {
      const modal = $('#modal');
      modal.removeClass('show');
      setTimeout(function () {
        modal.css('display', 'none');
        resetModal(); // Reset modal content
      }, 400);
    });

    // Close the modal when clicking outside of it
    $(window).on('click', function (event) {
      if ($(event.target).is('#modal')) {
        const modal = $('#modal');
        modal.removeClass('show');
        setTimeout(function () {
          modal.css('display', 'none');
          resetModal(); // Reset modal content
        }, 400);
      }
    });
  });
</script>
