{% schema %}
{
  "name": "CTA01",
  "settings": [
    {
        "type": "range",
        "id": "padding_top",
        "label": "Spacing Top",
        "min": 20,
        "max": 100,
        "step": 5,
        "default": 20
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "label": "Spacing Bottom",
        "min": 20,
        "max": 100,
        "step": 5,
        "default": 20
    },
    {
      "type": "image_picker",
      "id": "Card_01_image",
      "label": "Card 01 background image"
    },
    {
      "type": "text",
      "id": "button_01_text",
      "label": "Card 01 Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "button_01_url",
      "label": "Card 01 button URL",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "Card_02_image",
      "label": "Card 02 background image"
    },
    {
      "type": "text",
      "id": "button_02_text",
      "label": "Card 02 Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "button_02_url",
      "label": "Card 02 button URL",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "Card_03_image",
      "label": "Card 03 background image"
    },
    {
      "type": "text",
      "id": "button_03_text",
      "label": "Card 03 Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "button_03_url",
      "label": "Card 03 button URL",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "Card_04_image",
      "label": "Card 04 background image"
    },
    {
      "type": "text",
      "id": "button_04_text",
      "label": "Card 04 Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "button_04_url",
      "label": "Card 04 button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "CTA Cards",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  .CTA01_Card {
    display: flex;
    flex-direction:column;
    justify-content: center;
    align-items: center;
    min-height: 300px;
    background-size: cover;
    background-position: center;
    border-radius: 20px;
    overflow:hidden;
    padding:0px;
  }
  .CTA01_Card img{
    min-height:300px;
    width:100%;
    height:100%;
    object-fit:cover;
    object-position:center;
    margin-bottom:-120px;
    transition:1s;
  }
  .CTA01_Card:hover{
    scale:1.1;
  }
  .CTA01-col-middle {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .shop-now-btn {
    padding: 10px 25px;
    background: #fff;
    text-decoration: none;
    font-weight: 700;
    color: #888;
    border-radius:50px;
    margin:30px;
    transition:0.5s;
    z-index:999;
  }
  .shop-now-btn:hover{
    background:#11B387;
    color:#fff;
  }
{% endstyle %}

<div class="container">
  <div class="row " style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{section.settings.padding_bottom }}px;">
    <div class="col-lg-4 CTA01_Card">
        <img src="{{ section.settings.Card_01_image | image_url }}" width="100%" height="100%" alt="">
      <a href="{{ section.settings.button_01_url }}" class="shop-now-btn">{{ section.settings.button_01_text }}</a>
    </div>
    <div class="col-lg-4 CTA01-col-middle">
      <div
        class="CTA01_Card"
        style="background-image: url({{ section.settings.Card_02_image | image_url }}); height:200px"
      >
        <a href="{{ section.settings.button_02_url }}" class="shop-now-btn">{{ section.settings.button_02_text }}</a>
      </div>
      <div
        class="CTA01_Card"
        style="background-image: url({{ section.settings.Card_03_image | image_url }}); height:200px"
      >
        <a href="{{ section.settings.button_03_url }}" class="shop-now-btn">{{ section.settings.button_03_text }}</a>
      </div>
    </div>
    <div class="col-lg-4 CTA01_Card" style="background-image: url({{ section.settings.Card_04_image | image_url }});">
      <a href="{{ section.settings.button_04_url }}" class="shop-now-btn">{{ section.settings.button_04_text }}</a>
    </div>
  </div>
</div>
